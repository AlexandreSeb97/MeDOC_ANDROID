<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".HomeActivity"
    android:background="#84DCCF">

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout2"></RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#EF626C"
        android:id="@+id/relativeLayout3">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:id="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/relativeLayout2"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <Button style="@style/Button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUICK! TO THE DOCTOR"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/button2"
            android:textStyle="bold" />

        <Button style="@style/Button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick! To the Hospital"
            android:id="@+id/button2"
            android:onClick="onMapClick"
            android:textColor="#22181C"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MeDOC"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="75dp"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_toStartOf="@+id/relativeLayout2" />


</RelativeLayout>
